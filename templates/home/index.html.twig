{% extends 'base.html.twig' %}
{% block title %}Events by S{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Optional: add Bootstrap via CDN if not present -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> -->
    <style>
        .fadein-scroll {
            opacity: 0;
            transition: opacity 0.7s cubic-bezier(.4,0,.2,1);
        }
        .fadein-scroll.visible {
            opacity: 1;
        }
        .soft-card {
            border-radius: 18px;
            background: rgba(243,236,228,0.7);
            box-shadow: 0 6px 30px -10px #e8e7db;
            border: none;
        }
    </style>
{% endblock %}

{% block body %}
